<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>

      <%= link_to "🗑️ Supprimer",
        task_path(task),
        method: :delete,
        data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette tâche ?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "➕ Créer une nouvelle tâche", new_task_path %>
